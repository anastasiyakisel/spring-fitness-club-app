<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow 
  http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<var name="user" class="by.bsu.kisel.model.User" />
	
	<view-state id="indexPage" view="/WEB-INF/jsp/index.jspx" model="user">
		<transition on="index" to="loginPage"/>
		<transition on="returnHome" to="indexPage"/>
	</view-state>
	
	<view-state id="loginPage" view="/WEB-INF/jsp/login.jspx" model="user">
		<transition on="loginCredentialsEntered" to="performLoginAction" />
		<transition on="returnHome" to="indexPage"/>
	</view-state>
	

	<action-state id="performLoginAction">
		<evaluate result="user" expression="loginService.checkLogin(user)" />
		<transition to="registration" on-exception="by.bsu.kisel.exception.LoginException" />
		<transition to="main">
			<set name="externalContext.sessionMap.user" value="user" />
		</transition>
	</action-state>

	<view-state id="main" view="/WEB-INF/jsp/jspClient/main.jspx">
		<transition to="endState" />
	</view-state>

	<view-state id="registration" view="/WEB-INF/jsp/jspClient/registration.jspx" model="user">
		<transition on="newUsernameEntered" to="createUser"/>
		<transition on="returnHome" to="indexPage"/>
	</view-state>
	
	<action-state id="createUser">
        <evaluate result="user" expression="registrationService.createUser(user)" />
        <transition to="registration" on-exception="by.bsu.kisel.exception.InvalidInputDataException" />
        <transition to="registration" on-exception="by.bsu.kisel.exception.LoginException" />
        <transition to="userReady" />
    </action-state>
    
    <end-state id="userReady">
		<output name="user" />
	</end-state>

	

</flow>